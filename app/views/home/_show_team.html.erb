
<% @team_number.times do %>

<div class="row">
  	<div class="col-6 col-md-4"><br/>

  	<% rand_num = rand(1..1000) %>
  	<% set_number = rand(1..3) %>
  	<% bg = rand(1..2) %>

  	<% if set_number == 1 %>
  		<%	set = "set1" %>
  	<% else set_number == 2 %>
  		<%	set = "set2" %>
  	<% end %>

  	<% if bg == 1 %>
  		<%	background = "bg1" %>
  	<% else bg == 2 %>
  		<%	background = "bg2" %>
  	<% end %>
  		
  	<% avatar = Faker::Avatar.image(rand_num, "300x300", "png", set, background) %>

  			 <img src="<%= avatar %>"><br/>
  	</div>
  	<div class="col-12 col-md-8">
		 <h3>
		 	SuperHero name: <br/>
		 	<span class="red"><%= Faker::Superhero.name %><br/></span>
		 </h3>
		 <h3>
			 SuperHero power: <br/>
			 <span class="red"><%= Faker::Superhero.power %></span><br/><br/>
		</h3>
		<h4>
		 Your Undercover Day Job is:<br/>
		 <span class="corpred"><%= Faker::Job.title %></span>
		 <br/>
		</h4>
		<h4>
		 Your Corporate Superpower is:<br/>
		 <span class="corpred"><%= Faker::Company.bs.titleize %></span><br/><br/>
		</h4>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<hr>
	</div>
</div>
<% end %>