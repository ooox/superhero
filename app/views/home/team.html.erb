<div class="panel panel-primary">
  <div class="panel-heading">
  	<h3 class="panel-title gray">
  		<% if @team_number > 0 %>
  		Your Superhero Team:
  		<% else %>
  		How many team members do you want?
  		<% end %>
  		</h3>
  	</div>
  <br/>
  <div class="panel-body">


<% if @team_number > 0 %> 
	<%= render 'home/show_team' %>
<% else %>
	<%= render 'home/create_team' %>
<% end %>


  </div>
<div class="panel-footer"><%= link_to 'Create a team', home_team_path %></div>
</div>
